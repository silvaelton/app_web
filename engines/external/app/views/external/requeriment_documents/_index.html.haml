#image-card
  - @requeriment.requeriment_documents.order(id: :desc).each_with_index do |document, index|
    .card
      .card-body.card-header
        .text-center
          %b Imagem #{@requeriment.requeriment_documents.count - index} 
      .card-body.image-card
        .row
          .col-12.text-center
            .image-content
              = link_to image_tag(document.attachment.thumb.url, class: 'img-fluid img-thumbnail'), external.requeriment_requeriment_document_path(@requeriment, document), remote: true if document.attachment?
            %small (Toque para visualizar)
      .remove-image-content
        = link_to external.requeriment_requeriment_document_delete_path(@requeriment, document), remote: true, class: 'remove-image btn btn-danger' do
          %i.fa.fa-times