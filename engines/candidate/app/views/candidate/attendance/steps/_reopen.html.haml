#modal-success.modal-dialog.modal-dialog-centered
  .modal-content
    .modal-header
      %h5.modal-title.text-center
        Atenção
      %a.close.modal-close
        %i.fa.fa-close
    .modal-body.text-center
      %br/
      %h6 Etapa já finalizada, deseja alterar?
      .divider

      = link_to "Sim, desejo atualizar", candidate.attendance_ticket_step_reopen_step_path(@ticket, @ticket_step), class: 'btn btn-primary btn-block'
      = link_to "Não, cancelar", "javascript:void(0)", class: 'btn btn-success btn-block modal-close'