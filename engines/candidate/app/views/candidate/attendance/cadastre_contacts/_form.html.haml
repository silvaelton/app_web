= simple_form_for [@ticket, @ticket_step, @contact], url: attendance_ticket_step_cadastre_contact_path(@ticket, @ticket_step, @contact), method: :put do |f|
  = f.input :telephone, placeholder: "Somente números"
  = f.input :telephone_optional, placeholder: "Somente números"
  = f.input :celphone, placeholder: "Somente números"
  = f.input :email, placeholder: "email@email.com"
  = f.input :city_id, as: :select, collection: Support::Common::City.federal_district, include_blank: t(:include_blank)
  = f.input :cep, placeholder: "00000-000", input_html: { class: 'cep' }
  = f.input :address, placeholder: "Informe seu endereço"
  = f.button :submit, class: 'btn btn-success btn-block', data: { disable_with: t(:disable_with)}